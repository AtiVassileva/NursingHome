@model IEnumerable<NursingHome.DAL.Models.Report>

@{
    ViewData["Title"] = "Качени отчети";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Качени отчети</h3>
    <a class="btn btn-darkBlue d-flex align-items-center justify-content-center" style="height: fit-content" asp-controller="Reports" asp-action="Upload">Качи отчет</a>
</div>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Тип</th>
        <th>Име на файл</th>
        <th>Качен от</th>
        <th>Дата</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.Type.GetDisplayName()</td>
            <td>@r.FileName</td>
                <td>@string.Concat(@r.UploadedBy?.FirstName, " ", @r.UploadedBy?.LastName)</td>
            <td>@r.UploadedOn.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
            <td>
                <a href="@r.FilePath" target="_blank" class="btn btn-darkBlue">Отвори файла</a>
            </td>
        </tr>
    }
    </tbody>
</table>