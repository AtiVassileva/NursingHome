@{
    ViewData["Title"] = "Качване на отчет";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Качване на отчет</h3>
    <a class="btn btn-info d-flex align-items-center justify-content-center" style="height: fit-content" asp-controller="Reports" asp-action="List">Прегледай качени отчети</a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Файл</label>
        <input type="file" name="file" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Тип на отчета</label>
        <select name="type" class="form-select">
            @foreach (ReportType type in Enum.GetValues(typeof(ReportType)))
            {
                <option value="@type">@type.GetDisplayName()</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-darkBlue">Качи</button>
</form>