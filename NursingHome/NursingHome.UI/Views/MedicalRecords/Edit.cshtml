@model MedicalRecordRowViewModel

<h2>Обнови медицинско досие</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="mb-3">
        <label class="form-label">Потребител</label>
        <input type="text" class="form-control" asp-for="@Model.FullName" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="@Model.DisabilityPercent" class="form-label"></label>
        <input asp-for="@Model.DisabilityPercent" class="form-control" />
        <span asp-validation-for="@Model.DisabilityPercent" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Allergies" class="form-label"></label>
        <textarea asp-for="@Model.Allergies" class="form-control"></textarea>
        <span asp-validation-for="@Model.Allergies" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Therapy" class="form-label"></label>
        <textarea asp-for="@Model.Therapy" class="form-control"></textarea>
        <span asp-validation-for="@Model.Therapy" class="text-danger"></span>
    </div>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
    <button type="submit" class="btn btn-success">Запази</button>
</form>