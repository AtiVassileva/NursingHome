@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Начало</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-controller="Home" asp-action="Contacts">Контакти</a>
    </li>
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsAdmin())
        {
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="EmployeeAccounts">Служители</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="ResidentsAccounts">Потребители</a>
            </li> 
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Admin" asp-action="MonthlyParameters">Месечни параметри</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Fee" asp-action="Calculate">Изчисли такса</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Настройки</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                <button type="submit" class="nav-link btn btn-link text-danger">Изход</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Вход</a>
        </li>
    }
</ul>