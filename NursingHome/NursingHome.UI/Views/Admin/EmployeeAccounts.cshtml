@using NursingHome.UI.Services
@model List<ApplicationUser>
@inject UserUiService UserUiService

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<div class="d-flex justify-content-between">
    <h3 class="mt-4">Списък със служители</h3>
    <a class="btn btn-info d-flex align-items-center justify-content-center" asp-area="Identity" asp-page="/Account/Register">Добавяне на потребител</a>
</div>

<table class="table table-bordered table-striped mt-3">
    <thead class="table-light">
    <tr>
        <th>Име</th>
        <th>Имейл</th>
        <th>Роля</th>
        <th>Статус</th>
        <th>Действия</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@string.Concat(user.FirstName, " ", user.MiddleName, " ", user.LastName)</td>
            <td>@user.Email</td>
                <td>@string.Join(", ", UserUiService.GetUserRoleNamesInBulgarian(user.Email))</td>
            <td>@user.UserStatus.GetDisplayName()</td>
            <td class="d-flex justify-content-center">
                <a href="/Edit/@user.Email" class="action-icon text-success" title="Редактирай">
                    <i class="fas fa-edit"></i>
                </a>
                <a href="/Edit/@user.Email" class="action-icon text-danger" title="Изтрий">
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
