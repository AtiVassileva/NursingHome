@model IEnumerable<BirthdayViewModel>

@{
    ViewData["Title"] = "Рожденици";
}

<h2 class="mb-4">Рожденици</h2>

<table class="table table-bordered table-striped mt-4">
    <thead>
        <tr>
            <th>Три имена</th>
            <th>Рожден ден</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
            <tr>
                <td>@row.FullName</td>
                <td>@row.Birthday.ToString("dd.MM.yyyy")г.</td>
            </tr>
        }
    </tbody>
</table>